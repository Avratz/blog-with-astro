---
import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = 'Welcome to Astro'
---

<BaseLayout title={pageTitle}>
	<main>
		<h1>Welcome to Astro</h1>
	</main>
</BaseLayout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
